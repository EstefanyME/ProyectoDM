---
import { Image } from 'astro:assets';
import React from 'react';
interface Props {
    icon:React.ReactNode;
	title: string;
	children: React.ReactNode;
	year: string;
}

const { icon, year, title, children } = Astro.props;
---
<li class="mb-10 ml-6">            
    <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
        {icon}
    </span>
    <h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
    <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{year}</time>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{children}</p>
    
</li>