---
import { Image } from "astro:assets";
import NES from "../assets/NES.jpg";
import gameCube from "../assets/gamecube.jpg";
import NintendoDS from "../assets/nintendods.jpg";
import Nintendo3DS from "../assets/nintendo3ds.jpg";
import gameboyColor from "../assets/gameboycolor.jpg";
import gameboyAdvance from "../assets/gameboyAdvance.jpg";
import Wii from "../assets/wii.jpg";
import Wiiu from "../assets/wiiu.jpeg";
import Cswitch from "../assets/switch.jpg";
import Audio1 from "../assets/audio1.mp3";

interface Props {}

const {} = Astro.props;
---

<div id="consolas" class="flex flex-col items-center w-full mx-auto">
  <h1 class="text-2xl md:text-3xl font-bold text-center my-3">Consolas Icónicas</h1>
  <div class="w-full justify-items-center md:w-1/2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <div
      class="relative max-w-xs overflow-hidden bg-cover bg-no-repeat"
      data-te-ripple-init
      data-te-ripple-color="light"
    >
      <Image
        class="h-auto md:h-64 object-cover rounded-lg"
        src={NES}
        alt="Nintendo NES."
      />
      <a href="#!">
        <div
          class="flex flex-col items-center justify-center absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-[rgba(0,0,0,0.4)] bg-fixed opacity-0 transition duration-300 ease-in-out hover:opacity-100"
        >
          <p class="text-sm text-center font-semibold">
            Nintendo Entertainment System
          </p>
        </div>
      </a>
    </div>
    <div
      class="relative max-w-xs overflow-hidden bg-cover bg-no-repeat"
      data-te-ripple-init
      data-te-ripple-color="light"
    >
